<h1>Director #<%= @director_id %> details</h1>
<a href="/directors">Go back</a>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>
  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>
  <dt>Image</dt>
  <dd><img src="http://robohash.org/<%= @director.image %>" style="width:250px;"></dd>
  <dt>Created at</dt>
  <dd><%= @director.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @director.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>
<table border="1">
  <tbody>
    <tr>
      <th>ID</th>
      <th>Image</th> 
      <th>Title</th> 
      <th>Year</th> 
      <th>Director</th> 
      <th></th> 
    </tr>

    <% @list_of_director_movies.each do | movie |%>    
      <tr>
        <td> <%= movie.id %> </td>
        <td> <img style="width:250px;" src="http://robohash.org/<%= movie.image %>"> </td>
        <td> <%= movie.title %> </td>
        <td> <%= movie.year %> </td>
        <td> <%= @director.name %> </td>
        <td> <a href="/movies/<%= movie.id %>"> Show details </a> </td>
      </tr>
    <% end %>
  </tbody>
</table>
