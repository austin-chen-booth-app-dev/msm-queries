<h1>List of all actors</h1>
<hr>

<table border="1">
  <tbody>
    <tr>
      <th> ID </th>
      <th> Image </th>
      <th> Name </th>
      <th> DOB </th>
      <th>  </th>
    </tr>
    <% @list_of_actors.each do | actor |%>    
      <tr>
        <td> <%= actor.id %> </td>
        <td> <img style="width:250px;" src="http://robohash.org/<%= actor.image %>"> </td>
        <td> <%= actor.name %> </td>
        <td> <%= actor.dob %> </td>
        <td> <a href="/actors/<%= actor.id %>"> Show details </a> </td>
      </tr>
    <% end %>
  </tbody>
</table>
